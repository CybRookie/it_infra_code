# According to backup SLA: backups should be done automatically at 1:00 (1 AM) on Sundays with 1 minute step for each service

0 1 * * 0 backup /home/backup/scripts/ansible.sh
1 1 * * 0 backup /home/backup/scripts/grafana.sh

# According to backup SLA: backups should be done automatically at 1:00 (1 AM) on Sundays every 4 weeks
2 1 * * 0 backup [[ $((($(date +%s) / 604800) % 4)) == 0 ]] && /home/backup/scripts/prometheus.sh

# Upload all the backups every week at 1:00 (1 AM) on Sundays

3 1 * * 0  backup  duplicity --no-encryption full /home/backup/backup/ rsync://CybRookie@backup.{{ domain_name }}{{ top_level_domain }}//home/CybRookie/ &> /dev/null

# Delete old backups at 5:00 on Sundays every 2 weeks, store only 2 backups

0 5 * * 0  backup  [[ $((($(date +%s) / 604800) % 2)) == 0 ]] && duplicity --no-encryption remove-all-but-n-full 2 --force rsync://CybRookie@backup.{{ domain_name }}{{ top_level_domain }}//home/CybRookie/ &> /dev/null
